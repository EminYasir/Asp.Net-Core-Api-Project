@model HotelProject.WebUI.Dtos.BookingDto.UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayoutController1/_AdminLayout.cshtml";
}

<h1>Reservasyon Güncelleme Sayfası</h1>

<form method="post" asp-controller="BookingAdmin" asp-action="UpdateBooking">
    <input type="hidden" asp-for="BookingID" />
    <label> Adı Soyadı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label> Mail Adresi</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <span asp-validation-for="Mail" class="text-danger"></span>
    <br />
    <label> Giriş Tarihi</label>
    <input type="date" asp-for="Checkin" class="form-control" />
    <br />
    <label> Çıkış Tarihi</label>
    <input type="date" asp-for="Checkout" class="form-control" />
    <br />
    <label> Yetişkin Sayısı</label>
    <input type="text" asp-for="AdultCount" class="form-control" />
    <br />
    <label> Çocuk sayısı</label>
    <input type="text" asp-for="ChildCount" class="form-control" />
    <br />
    <label> Oda Sayısı</label>
    <input type="text" asp-for="RoomCount" class="form-control" />
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Ülke</label>
    <input type="text" asp-for="Country" class="form-control" />
    <br />
    <label>Durum</label>
    <input type="text" asp-for="Status" class="form-control" />
    <br />
    <label>Özel İstekler</label>
    <textarea class="form-control" rows="5" asp-for="SpecialRequest" class="form-control"></textarea> 
    <br />
    <label>Açıklama</label>
    <textarea class="form-control" rows="5" asp-for="Description" class="form-control"></textarea> 
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-primary">Rezervasyonu Güncelle</button>
</form>

