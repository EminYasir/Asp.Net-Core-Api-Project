@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th># Ad Soyad</th>
                                    <th>Şehir</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                                        <td>@item.City</td>
                                        <td><i class="fa fa-circle-o text-success  mr-2"></i> Aktif</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <br />
                        <a href="/Register/Index" class="btn btn-success" style="border-radius:30px;">Yeni Kullanıcı Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>