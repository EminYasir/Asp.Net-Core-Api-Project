

<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-1">
            <div class="card-body">
                <h3 class="card-title text-white">Toplam Personel Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white" data-toggle="counter-up">@ViewBag.staffCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="far fa-address-card"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-2">
            <div class="card-body">
                <h3 class="card-title text-white">Toplam Rezervasyon Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white" data-toggle="counter-up">@ViewBag.bookingCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="far	fa-calendar-check"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-3">
            <div class="card-body">
                <h3 class="card-title text-white">Toplam Müşteri Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white" data-toggle="counter-up">@ViewBag.guestCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-4">
            <div class="card-body">
                <h3 class="card-title text-white">Toplam Oda Sayısı</h3>
                <div class="d-inline-block">
                    <h2 class="text-white" data-toggle="counter-up">@ViewBag.roomCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fas fa-bed"></i></span>
            </div>
        </div>
    </div>
</div>