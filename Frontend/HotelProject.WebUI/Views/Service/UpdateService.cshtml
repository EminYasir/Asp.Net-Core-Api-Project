@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayoutController1/_AdminLayout.cshtml";
}

<h1>Update Service</h1>

<form method="post">
    <input type="hidden" asp-for="ServiceID" class="form-control" />
    <label>Hizmet İconu</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-info"></span>
    <br />
    <br />
    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-info"></span>
    <br />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-info"></span>
    <br />
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-primary">Hizmeti Güncelle</button>
</form>

